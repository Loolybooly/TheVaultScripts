local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Create window with configuration saving
local Window = Rayfield:CreateWindow({
    Name = "The Vault Scripts",
    LoadingTitle = "The Vault Scripts",
    LoadingSubtitle = "The best (hopefully) script you'll ever use",
    Theme = "Ocean",
    
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "Th3Vault$criptsK3y$y$t3m",
        FileName = tostring(game.Players.LocalPlayer.UserId)
    },
    
    Discord = {
        Enabled = true,
        Invite = "https://discord.gg/rbcJTFtVNG",
        RememberJoins = false
    },
    
    KeySystem = true, 
    KeySettings = {
        Title = "The Vault Scripts Key System",
        Subtitle = "Key System",
        Note = "The Key is in the discord server! link to server: https://discord.gg/rbcJTFtVNG", 
        FileName = "Th3Vault$criptsK3y$y$t3m", 
        SaveKey = true, 
        GrabKeyFromSite = false, 
        Key = {"Th3Vault$criptsK3y"} 
    }
})

-- Notifications
Rayfield:Notify({
    Title = "The Vault - Startup",
    Content = "The best (hopefully) script you'll ever use",
    Duration = 4,
})

-- Wait for key verification
Window:PromptKey()

-- After key is verified, load the appropriate script
local gameScripts = {
    [6403373529] = "https://raw.githubusercontent.com/Loolybooly/TheVaultScripts/refs/heads/main/SlapBattles", -- Slap Battles
    [10449761463] = "https://raw.githubusercontent.com/Loolybooly/TheVaultScripts/refs/heads/main/TSBG" -- The Strongest Battlegrounds
}

local gameId = game.PlaceId

if gameScripts[gameId] then
    Rayfield:Notify({
        Title = "The Vault - Loading",
        Content = "Loading script for "..(gameId == 6403373529 and "Slap Battles" or "The Strongest Battlegrounds"),
        Duration = 3,
    })
    loadstring(game:HttpGet(gameScripts[gameId]))()
else
    Rayfield:Notify({
        Title = "The Vault - Error",
        Content = "Unsupported game. This script only works with Slap Battles or The Strongest Battlegrounds.",
        Duration = 6,
    })
end
